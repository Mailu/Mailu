# Mailu main configuration file
# Development Environment

# Set this to the path where Mailu data and configuration is stored
ROOT=./data

# Mailu version to run
VERSION=master

# Set to a randomly generated 16 bytes string
SECRET_KEY=DevSecretKey1234

# Address where listening ports should bind
# In dev, we might bind to all interfaces inside the container
BIND_ADDRESS4=0.0.0.0
BIND_ADDRESS6=::1

# Subnet of the docker network.
SUBNET=192.168.203.0/24

# Main mail domain
DOMAIN=mail.test

# Hostnames for this server
HOSTNAMES=mail.test,localhost

# Postmaster local part
POSTMASTER=admin

# Choose how secure connections will behave
TLS_FLAVOR=notls

# Authentication rate limit (per source IP address)
AUTH_RATELIMIT=1000/minute

# Opt-out of statistics
DISABLE_STATISTICS=True

# Features
ADMIN=true
WEBMAIL=roundcube
WEBDAV=none
ANTIVIRUS=none

# Mail settings
MESSAGE_SIZE_LIMIT=50000000
MESSAGE_RATELIMIT=1000/day
RELAYNETS=
RELAYHOST=
FETCHMAIL_DELAY=600
RECIPIENT_DELIMITER=+
DMARC_RUA=admin
DMARC_RUF=admin

# Web settings
WEBROOT_REDIRECT=/admin
WEB_ADMIN=/admin
WEB_WEBMAIL=/webmail
SITENAME=Mailu Dev
WEBSITE=http://localhost

# Advanced settings
COMPOSE_PROJECT_NAME=mailu-dev
CREDENTIAL_ROUNDS=12
LOG_LEVEL=INFO

# Development mode - disable DNSSEC validation for Docker's internal DNS
SKIP_DNSSEC_CHECKS=True

# Initial admin account creation
INITIAL_ADMIN_ACCOUNT=admin
INITIAL_ADMIN_DOMAIN=mail.test
INITIAL_ADMIN_PW=letmein
